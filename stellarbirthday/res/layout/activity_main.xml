<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/outer_space"
    tools:context="com.example.stellarbirthday.MainActivity" >

    
    <Button
       android:id="@+id/changeDate"
       android:layout_marginLeft="2dp"
       android:layout_marginTop="20dp"
       android:layout_centerVertical="true"  
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Select Bithday Date" 
       android:visibility="invisible" />
    
    
    <TextView
	    android:id="@+id/userInfoTextView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="0dp"
	    android:layout_marginTop="2dp"
	    android:layout_below="@+id/changeDate"
	    android:text="diff in days"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:visibility="visible" />
    

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_marginLeft="5dp"
	    android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        
		android:alpha="0.5"
		  />
    
    
    <TextView
         android:id="@+id/text_view_header"
		 android:layout_width="fill_parent"
         android:layout_height="wrap_content"
  		 android:textColor="#FFFFFF"
         android:textSize="25sp"
         android:layout_marginLeft="0dp"
	     android:layout_marginTop="2dp"
	     android:layout_below="@+id/userInfoTextView"
         android:text="VEGA" />
    	
    <ImageButton
         android:id="@+id/app_logo"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_centerHorizontal="true"
         android:layout_centerVertical="true"       
         android:gravity="center"
         android:background="@drawable/logo"
         android:visibility="visible" />

     <ImageButton
         android:id="@+id/icon_googleskymap"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="18dp"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
         android:background="@drawable/icon_googleskymap"
         android:gravity="center"
         android:visibility="visible"
         android:onClick="onClick_start_googleskymap" />
     
     
      <ImageButton
         android:id="@+id/icon_info"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_alignParentBottom="true"
         android:layout_toLeftOf="@+id/icon_googleskymap"
         android:layout_marginBottom="18dp"
         android:background="@drawable/info_b2"
         android:gravity="center"
         android:visibility="visible"
         android:onClick="onClick_start_stellarinfo"/>
               
      <ImageButton
         android:id="@+id/icon_sharing"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_alignParentBottom="true"
         android:layout_toRightOf="@+id/icon_googleskymap"
         android:layout_marginBottom="18dp"
         android:background="@drawable/share_blue"
         android:gravity="center"
         android:visibility="visible" 
         android:onClick="onClick_share_stellarinfo"  />

</RelativeLayout>
